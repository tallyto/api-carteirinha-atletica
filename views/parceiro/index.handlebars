<div class="card-body">
    <h3>Parceiros</h3>

    <hr>
    <a href="/parceiro/create"><button type="submit" class="btn btn-success">Cadastrar parceiro</button></a>

    <div class="row">
        {{#each parceiro }}

        <div class="col-lg-3 mt-3">
            <div class="card" style="background-color: whitesmoke;">
                <div class="card-body">
                    <img src={{img.url}} class="rounded" style="width: 150px; height:150px;">

                    <h5 class="title">{{nome}}</h5>
                    <p class="description">Promocao: {{promocao}}</p>

                    <form action="/parceiro/findAndUpdate/{{_id}}" class="mt-2" method="POST">
                        <button type="submit" class="btn btn-success">Editar</button>
                    </form>

                    <form action="/parceiro/remove/{{_id}}" class="mt-2" method="POST">
                        <button type="submit" class="btn btn-danger ">Deletar</button>
                    </form>

                </div>
            </div>
        </div>

        {{/each}}

    </div>

</div>